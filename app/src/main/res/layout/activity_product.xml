<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product"
    android:background="#065248">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="281dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/produk" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Berapa mL yang ingin anda isi ulang?"
        android:textColor="#EFEFEF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/volumeInput"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/volumeInput"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:alpha="0.5"
        android:background="@drawable/input_frame_white"
        android:ems="10"
        android:hint="Enter mL"
        android:inputType="number"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#EFEFEF"
        android:textColorHint="#EFEFEF"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_pink"
        android:text="NEXT"
        android:textColor="#272727"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/volumeInput"
        app:layout_constraintStart_toStartOf="@+id/volumeInput"
        app:layout_constraintTop_toBottomOf="@+id/volumeInput" />


</androidx.constraintlayout.widget.ConstraintLayout>